@model IEnumerable<Examples_ASPNet.Models.Department>


@helper DepartmentEditBlock (int aDepartmentID)
{
    <div class="PaymentsTable EditBlock">
        @Html.ActionLink("Правка"       , "DepartmentEdit"        , new { id = aDepartmentID }) |
        @Html.ActionLink("Обзор"        , "DepartmentDetails"     , new { id = aDepartmentID }) |
        @Html.ActionLink("Удалить"      , "DepartmentDelete"      , new { id = aDepartmentID })
    </div>
}


@{
    int RecordsCount = (Model != null) ? Model.Count() : -1;
    string RecordsCountTitle = (RecordsCount >= 0) ? "(" + RecordsCount + ")" : "(нет записей)";
}

<div class="RecordsTableTitleBlock"><h4>Все отделы по алфавиту @RecordsCountTitle</h4></div>

@*
