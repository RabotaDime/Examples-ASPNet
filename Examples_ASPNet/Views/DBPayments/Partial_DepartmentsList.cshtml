<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @if (Model != null) { foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @DepartmentEditBlock(item.DepartmentID)
        </td>
    </tr>
    }} else {
        <tr>
            <th colspan="1"><i>Нет записей</i></th>
        </tr>
    }

</table>
